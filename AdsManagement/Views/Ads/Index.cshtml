@model IEnumerable<AdsManagement.Models.OffersViewModel>
@{
    ViewBag.Title = "List";
}

<h2>Index</h2>

<div class="container">
    
    <table class="table-responsive table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(x => x.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(x => x.Category)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @String.Format("{0:dd-MM-yyyy}", item.StartDate)
                    </td>
                    <td>
                        @String.Format("{0:dd-MM-yyyy}", item.EndDate)
                    </td>
                    <td>
                        @Html.ActionLink(item.Category.Name, "ShowAdsByCategory", new { categoryId = item.Category.Id})
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
        
</div>